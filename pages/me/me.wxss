/* pages/me/me.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.navigator
{
  display: flex;
  flex-direction: column;
  align-items: stretch;
  margin: 80rpx 20rpx;
  border-top: 1px solid #cdcdcd;
}

.navigator-item
{
  display: flex;
  padding: 15rpx 20rpx;
  justify-content: space-between;
  border-bottom: 1px solid #cdcdcd;
}

.arrow
{
  width: 20rpx;
  height: 20rpx;
  margin: 15rpx 20rpx 15rpx 0rpx;
  border-top: 5rpx solid black;
  border-right: 5rpx solid black;
  transform: rotate(45deg);
}